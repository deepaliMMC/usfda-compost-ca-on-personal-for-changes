# ===================== AWS / S3 =====================
AWS_REGION=us-west-2
AWS_REQUEST_PAYER=requester

# NAIP source (read)
S3_BUCKET=
S3_TOP_PREFIX=

# Training chips on S3 (write)
S3_IMG_PREFIX=
S3_MSK_PREFIX=

# ===================== Local runtime =====================
RUNS_DIR=src/cafo-class/data
CACHE_DIR=./.cache
LOCAL_IMG_DIR=data/processed/images
LOCAL_MSK_DIR=data/processed/masks

# ===================== Vectors (labels) =====================
FARM_POLY_GEOJSON=/path/to/test.geojson

# ===================== Data generation =====================
PATCH_SIZE=2048
LINE_BUFFER_PX=3

# ===================== Training =====================
SEED=42
EPOCHS=50
VAL_SPLIT=0.15
CROP_SIZE=1024
NUM_WORKERS_TRN=8
NUM_WORKERS_VAL=4

# ===================== Inference (tiled) =====================
CKPT_PATH=src/cafo-class/data/weights
TILE=1024
STRIDE=768
TILE_SIZE=2048
OVERLAP=0.5
THRESH=0.50

# ===================== Post-processing =====================
MORPH_RADIUS_PX=2
MIN_AREA_M2=1000
DISSOLVE_TOL_M=0.5
SIMPLIFY_TOL_M=1.5
OUT_CRS=EPSG:4326
AREA_CRS=EPSG:6933